<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout"
        android:id="@+id/title1"/>
    <TextView
        android:id="@+id/promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title1"
        android:text="@string/xpub_promote"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:textSize="@dimen/sp_14"/>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_25"
       android:layout_marginHorizontal="@dimen/dp_20"
       app:cardCornerRadius="@dimen/dp_20"
       app:cardBackgroundColor="#FAFAFA"
       app:layout_constraintTop_toBottomOf="@id/promote">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/dp_27"
           android:layout_marginTop="@dimen/dp_10"
           android:textSize="@dimen/sp_14"
           android:textColor="#9FA6AD"
           android:text="@string/xpub"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="@dimen/dp_19"
        app:cardCornerRadius="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_16">
        <FrameLayout
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xpub_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:textColor="#142A3B"
                android:lineSpacingExtra="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="xpub67xpozcx8pe95XVuZLHXZeG6XWXHpGq6Qv5cmNfi7cS5mtjJ2tgypeQbBs2UAR6KECeeMVKZBPLrtJunSDMstweyLXhRgPxdp14sk9tJPW9"/>
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:src="@drawable/copy_medium" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
   </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>