<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/white_back_tuo">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/custom_fee"
            android:textColor="@color/text_two"
            android:textSize="@dimen/sp_18"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_7"
            android:padding="@dimen/dp_14"
            android:src="@drawable/close_dark_small" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_below="@+id/text"
            android:layout_marginTop="@dimen/dp_14">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fee_per_byte_sat_b"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal" />

                <EditText
                    android:layout_width="135dp"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/gray_broken"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:textColor="@color/text_two"
                    android:textSize="@dimen/sp_18"
                    tools:text="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/second_0"
                    android:textColor="@color/text_three"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_byte"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/gray_broken"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:singleLine="true"
                    android:textColor="@color/text_two"
                    android:textSize="@dimen/sp_18"
                    tools:text="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/second_0"
                    android:textColor="@color/text_three"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_below="@+id/linearlayout"
            android:layout_marginEnd="@dimen/dp_25"
            android:background="@drawable/btn_checked"
            android:text="@string/create_"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>
</RelativeLayout>