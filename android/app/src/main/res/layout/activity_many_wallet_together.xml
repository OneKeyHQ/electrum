<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activities.jointwallet.MultiSigWalletCreator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="@string/creat_ggwallet"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/img_Progree1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/step1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_Progree2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/step2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_Progree3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/step3"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <TextView
                android:id="@+id/tet_Trone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Basics_message"
                android:textColor="@color/button_bk_disableok"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tet_Trtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_manager"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tet_Trthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creat_finish"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bk_page"
            android:paddingBottom="@dimen/dp_70">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bk_page"
                android:orientation="vertical">

                <!--    one    -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_viewOne"
                    android:layout_width="match_parent"
                    android:layout_height="287dp"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:outlineSpotShadowColor="@color/shadow_color"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_8"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="59.5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="59.5dp"
                                android:layout_marginStart="@dimen/dp_16"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="@string/set_wallet_name"
                                android:textColor="#494949"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_Walletname"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center|end"
                                android:hint="@string/please_input"
                                android:maxLength="20"
                                android:paddingEnd="@dimen/dp_16"
                                android:singleLine="true"
                                android:textColor="@color/text_color"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_hight"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginTop="18.5dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/together_num"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/test_public_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="@string/public_key"
                                android:textColor="@color/graytext_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginTop="17dp">

                            <View
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/text_margin"
                                android:layout_marginEnd="@dimen/text_margin"
                                android:background="@drawable/little_blue" />

                            <View
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:background="@drawable/little_gray" />

                            <org.haobtc.onekey.utils.IndicatorSeekBar
                                android:id="@+id/seek_bar_fee"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:max="13"
                                android:splitTrack="false"
                                android:thumb="@drawable/white_clrcle" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="@dimen/dp_5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/cosinger_number_min"
                                android:textColor="@color/text_0"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="9.5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/signature_need_max"
                                android:textColor="@color/text_0"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/tv_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:text="@string/cosinger_number_min"
                                android:textColor="#6182f5"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_hight"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="20.5dp"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:background="@color/line_color" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginTop="18.5dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/signed_num"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/test_sign_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="@string/tet_tips"
                                android:textColor="@color/graytext_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginTop="17dp">

                            <View
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/text_margin"
                                android:layout_marginEnd="@dimen/text_margin"
                                android:background="@drawable/little_blue" />

                            <View
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:background="@drawable/little_gray" />

                            <org.haobtc.onekey.utils.IndicatorSeekBar
                                android:id="@+id/seek_bar_num"
                                android:splitTrack="false"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:max="14"
                                android:thumb="@drawable/white_clrcle" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="@dimen/dp_5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/number_1"
                                android:textColor="@color/text_0"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/testseekNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="9.5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/signature_need_max"
                                android:textColor="@color/text_0"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/tv_indicatorTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/number_1"
                                android:textColor="#6182f5"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--      three      -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_viewThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:outlineSpotShadowColor="@color/shadow_color"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_8"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tet_who_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            tools:text="小米的钱包"
                            android:textColor="@color/text"
                            android:textSize="@dimen/big_text_size" />

                        <TextView
                            android:id="@+id/tet_many_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/corner_radius"
                            android:text="@string/choose_onekey"
                            android:textColor="@color/light_text"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/img_Orcode"
                            android:layout_width="248.3dp"
                            android:layout_height="248.3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:background="@color/separation_line"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tet_Preservation"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:text="@string/preservation"
                            android:textColor="@color/button_bk_disableok"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_three_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="90dp"
                    android:outlineSpotShadowColor="@color/shadow_color"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_8"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:text="@string/publicer"
                            android:textColor="#494949"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_hight"
                            android:background="@color/line_color" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recl_publicPerson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="3"
                            tools:listitem="@layout/public_person">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--      two      -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recl_BinxinKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/public_wallet_item">

                </androidx.recyclerview.widget.RecyclerView>


                <LinearLayout
                    android:id="@+id/bn_add_key"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:background="@drawable/add_bk"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:drawableStart="@drawable/add"
                        android:drawablePadding="@dimen/dp_5"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/add_bixin_key"
                        android:textColor="@color/button_bk"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_bk_grey"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/test_input_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:text="@string/input_history_wallet"
                    android:textColor="@color/graytext_color"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_TwoNext1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:visibility="gone">

        <Button
            android:id="@+id/bn_complete_add_cosigner"
            android:layout_width="343dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:background="@drawable/little_radio_qian"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@android:color/white">

        </Button>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_Finish"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_Finish"
            android:layout_width="343dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:background="@drawable/little_radio_blue"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:textColor="@android:color/white">

        </Button>


    </RelativeLayout>

</RelativeLayout>









